<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kaplan.pdma.brandmaster.ActivitySetting"
    android:background="@drawable/background">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backtomain2"
        android:background="@drawable/round_button_corner"
        android:layout_marginBottom="82dp"
        android:height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/myRadioGroup"
        android:layout_alignEnd="@+id/myRadioGroup" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myRadioGroup"
        android:checkedButton="@+id/sound"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:id="@+id/radioButton"
        android:checked="true"
        android:layout_above="@+id/radioButton2"
        android:layout_alignStart="@+id/radioButton2"
        android:layout_marginBottom="30dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normal"
        android:id="@+id/radioButton2"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    </RadioGroup>
</RelativeLayout>
